---
import Section from "../../components/Section.astro";
import Sponsor from "../../components/Sponsor.astro";
import googleIconSrc from "../../assets/sponsors/google.png";
import stickermuleIconSrc from "../../assets/sponsors/stickermule.png";
import frontiereIconSrc from "../../assets/sponsors/frontiere.svg";

interface SponsorValue {
  level: string;
  name: string;
  imageSrc: string;
  link: string;
}

const sponsors: SponsorValue[][] = [
  [
    {
      level: "Main sponsor",
      name: "Google",
      imageSrc: googleIconSrc,
      link: "https://gdg.community.dev/"
    },
    {
      level: "Media partner",
      name: "Stickermule",
      imageSrc: stickermuleIconSrc,
      link: "https://www.stickermule.com"
    }
  ],
  [
    {
      level: "Gold sponsor",
      name: "Frontiere",
      imageSrc: frontiereIconSrc,
      link: "https://frontiere.io/"
    }
  ]
];
---
<div class="bg-[url('images/old-map.png')]">
    <Section title="Sponsors">
      {sponsors.map((sponsorLevel) => (
              <div class="grid gap-8 xl:grid-cols-4 md:grid-cols-2 my-8">
                {sponsorLevel.map((sponsor) => (
                        <Sponsor
                                level={sponsor.level}
                                imageAlt={sponsor.name}
                                imageSrc={sponsor.imageSrc}
                                link={sponsor.link}
                        >
                        </Sponsor>
                ))}
              </div>
      ))}
    </Section>
</div>

