---
import type { ImageMetadata } from "astro";
import Heading from "./Heading.astro";
interface Props {
  imageSrc: ImageMetadata;
  imageAlt: string;
  title: string;
  description: string;
}

const { imageSrc, imageAlt, title, description } = Astro.props;
---

<div class="text-center px-2">
  <img
    class="max-h-[200px] h-[200px] m-auto"
    src={imageSrc.src}
    width={imageSrc.width}
    height={imageSrc.height}
    alt={imageAlt}
  />
  <Heading text={title} level="h3" />
  <div class="text-5xl xl:text-6xl font-bold text-accent-content">
    {description}
  </div>
</div>
