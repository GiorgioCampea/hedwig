---
import clsx from "clsx";
import Section from "./Section.astro";

type Props = {
  day: number;
};

const { day } = Astro.props;
import { t } from "i18next";
---

<div id="agenda" class="dots">
  <Section title={t("agenda:title") || ""} />
</div>
<div>
  <div
    class="w-3xl max-w-full text-center m-auto py-8 flex flex-wrap flex-col md:flex-row justify-center gap-4 items-center"
  >
    <a
      href="/agenda"
      class={clsx(
        "btn btn-o utline btn-wide btn-circle border-dashed text-black",
        { "bg-black text-white": day !== 1 }, //TODO: to verify
        { "bg-white text-black": day === 1 } //TODO: to verify
      )}>{t("agenda:event-day", { day: 1 })}</a
    >
    <a
      href="/agenda/2"
      class={clsx(
        "btn btn-o utline btn-wide btn-circle border-dashed text-black",
        { "bg-black text-white": day !== 2 }, //TODO: to verify
        { "bg-white text-black": day === 2 } //TODO: to verify
      )}>{t("agenda:event-day", { day: 2 })}</a
    >
  </div>
</div>
<div class="relative md:px-9">
  <h2 class="text-4xl px-2 md:px-0">
    {day === 1 ? t("agenda:event-date-1") : t("agenda:event-date-2")}
  </h2>
  <slot />
</div>
