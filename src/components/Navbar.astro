---
import navData from "../data/nav-data";
import Link from "./Link.astro";
let pathname = new URL(Astro.request.url).pathname;
pathname = pathname.length > 1 ? pathname.slice(0, -1) : pathname;
---

{
  navData.map((nav) => (
    <li class="text-white">
      <Link href={nav.path} active={pathname === nav.path}>
        {nav.name}
      </Link>
    </li>
  ))
}
