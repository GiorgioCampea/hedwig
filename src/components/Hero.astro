---
import gdgLogo from "../assets/gdg-logo.svg";

const signUpUrl =
    "https://gdg.community.dev/events/details/google-gdg-pescara-presents-devfest-pescara-2023/cohost-gdg-pescara";
---

<section
    id="signUp"
    class="hero min-h-screen bg-[url('/images/map-old-top.svg')]"
>
    <div
        class="hero-content text-center backdrop-blur-md backdrop-contrast-20 p-8 rounded-[25px] md:p-16"
    >
        <div class="max-w-3xl">
            <img
                width={gdgLogo.width}
                height={gdgLogo.height}
                class="m-auto"
                src={gdgLogo.src}
                alt="GDG Logo"
            />
            <h1 class="text-5xl md:text-6xl font-scriptina font-light text-black pt-16">
                DevFest Pescara 2023
            </h1>
            <h2 class="text-4xl md:text-[5rem] font-harrypotter text-black py-16">
                and the developers' magic
            </h2>
            <a
                class="btn btn-outline btn-wide btn-circle border-dashed text-black"
                href={signUpUrl}
                target="_blank">Sign up</a
            >
        </div>
    </div>
</section>

<style lang="scss">
    .hero {
        padding: 8rem 1rem 5rem 1rem;
    }

    .parallax {
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
