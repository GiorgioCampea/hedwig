---
import clsx from "clsx";
export interface Speaker {
  id: number;
  name: string;
  description: string;
  imageUrl: string;
}

const { name, length, language, speaker, multiple } = Astro.props;
---

<li
  class={clsx("flex flex-col md:flex-row gap-6 w-full", {
    "splide__slide mr-8 md:m-6": multiple,
  })}
>
  <div class="rounded-3xl md:bg-[#2E2E2E] flex flex-col w-full">
    <div class="p-6 h-full">
      <div class="flex justify-start pb-6">
        <span
          class="block bg-slate-300 text-black px-3 py-2 rounded-3xl text-sm"
        >
          {length}
        </span>
        <!--If language -->
        {
          language && (
            <span class="block bg-slate-300 text-black px-3 py-2 mx-2 rounded-3xl text-sm">
              {language}
            </span>
          )
        }
      </div>
      <h2 class="text-2xl md:text-4xl font-black">{name}</h2>
      <!-- If !speaker -->
      {!speaker && <hr class="h-px my-8 border-dashed" />}
    </div>
    <!--If speaker -->
    {
      speaker && (
        <div class="w-full bg-[#323232] rounded-b-3xl p-6 justify-self-end">
          <div class="blog-author flex align-items-center">
            <a
              href={"/speaker/" + speaker.name.toLowerCase().replace(" ", "-")}
            >
              <img
                src={speaker.imageUrl}
                class="w-14 h-14 rounded-2xl mr-4"
                alt={speaker.name}
              />
            </a>
            <div>
              <h3 class="text-lg md:text-xl">{speaker.name}</h3>
              <p class="text-sm">{speaker.description}</p>
            </div>
          </div>
        </div>
      )
    }
  </div>
</li>
